# ============================================
# Speech-to-Speech AI Platform - Environment Configuration
# ============================================

# --------------------------------------------
# API Gateway Configuration
# --------------------------------------------
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
SESSION_TTL=3600

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# --------------------------------------------
# STT Service Configuration
# --------------------------------------------
STT_HOST=0.0.0.0
STT_PORT=8001
STT_PROVIDER=whisper
# Options: whisper, groq

# Groq Configuration
GROQ_API_KEY=gsk_your_groq_api_key
GROQ_MODEL=whisper-large-v3

# Whisper Model Configuration
WHISPER_MODEL=base
# Options: tiny, base, small, medium, large, large-v2, large-v3

DEVICE=auto
# Options: auto, cpu, cuda

COMPUTE_TYPE=float16
# Options: float16, int8, float32

LANGUAGE=en
AUTO_DETECT_LANGUAGE=true

# --------------------------------------------
# LLM Service Configuration
# --------------------------------------------
LLM_HOST=0.0.0.0
LLM_PORT=8002

# LLM Provider
LLM_PROVIDER=openai
# Options: openai, anthropic, huggingface, local, groq

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
HUGGINGFACE_API_TOKEN=hf-your-huggingface-token
GROQ_API_KEY=gsk_your_groq_api_key

# Model Configuration
OPENAI_MODEL=gpt-3.5-turbo
ANTHROPIC_MODEL=claude-instant-1
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium
GROQ_MODEL=llama-3.1-8b-instant
LOCAL_MODEL_PATH=

# Generation Parameters
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=1024

# --------------------------------------------
# TTS Service Configuration
# --------------------------------------------
TTS_HOST=0.0.0.0
TTS_PORT=8003

# TTS Provider
PROVIDER=coqui
# Options: coqui, huggingface, pyttsx3, edge-tts

# Edge-TTS Configuration
EDGE_TTS_VOICE=en-US-AndrewNeural

# Model Configuration
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
VOCODER_MODEL=vocoder_models/en/ljspeech/hifigan_v2

# Audio Settings
SAMPLE_RATE=22050
OUTPUT_FORMAT=wav

# --------------------------------------------
# Frontend Configuration
# --------------------------------------------
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# --------------------------------------------
# Development/Production Mode
# --------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
